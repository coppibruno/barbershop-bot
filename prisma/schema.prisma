// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO")
}

model Conversations {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  messageId String
  name      String?
  fromPhone Int
  toPhone   Int
  body      String
  accountId String
  createdAt DateTime @default(now())
}
